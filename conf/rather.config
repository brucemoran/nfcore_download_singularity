/*
 * ---------------------------------------
 *  Nextflow config file for Rather server
 * ---------------------------------------
 * Imported under the 'rather' Nextflow profile in:
 * nextflow.config
 */

params {

  //per process maximums
  max_memory = 64.GB
  max_cpus = 40
  max_time = 36.h

}

process {

  time = '48.h'

  withLabel:low_mem {
    cpus = 2
    memory = 4.GB
  }

  withLabel:med_mem {
    cpus = 5
    memory = 16.GB
  }

  withLabel:high_mem {
    cpus = 10
    memory = 32.GB
  }

  withLabel:max_mem {
    cpus = 20
    memory = 64.GB
  }

}

singularity {
  cacheDir = '/store3/bmoran/nextflow'
}
